{
  "schemas": {
    "version": "1.0.0",
    "configure": {
      "default-config": {
        "title": "Default Config",
        "type": "object",
        "properties": {
          "options": {
            "title": "Options",
            "type": "object",
            "properties": {
              "listenIp": {
                "title": "Listen IP Address",
                "type": "string",
                "default": "0.0.0.0"
              },
              "listenPort": {
                "title": "Listen Port",
                "type": "number",
                "default": 7400
              },
              "sendToIp": {
                "title": "Send to IP Address",
                "type": "string",
                "default": "localhost"
              },
              "sendToPort": {
                "title": "Send to Port",
                "type": "number",
                "default": 3333
              }
            }
          }
        }
      }
    },
    "message": {
      "osc-message": {
        "$ref": "https://raw.githubusercontent.com/octoblu/meshblu-connector-osc/v2.0.0/message.json"
      },
      "osc-bundle": {
        "title": "Send Bundle",
        "type": "object",
        "properties": {
          "oscType": {
            "title": "OSC Type",
            "type": "string",
            "default": "bundle"
          },
          "timetag": {
            "title": "Time Tag",
            "type": "number"
          },
          "elements": {
            "title": "Elements",
            "type": "array",
            "items": {
              "$ref": "https://raw.githubusercontent.com/octoblu/meshblu-connector-osc/v2.0.0/message.json"
            }
          }
        },
        "x-form-schema": {
          "angular": "message.osc-bundle.angular"
        },
        "required": [ "oscType", "timetag", "elements" ]
      }
    },
    "form": {
      "message": {
        "osc-message": {
          "angular": [
            { "key": "address" },
            { "key": "args" }
          ]
        },
        "osc-bundle": {
          "angular": [
            { "key": "timetag" },
            { "key": "elements" }
          ]
        }
      }
    }
  }
}

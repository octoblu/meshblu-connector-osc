{
  "schemas": {
    "version": "1.0.0",
    "form": {
      "message": {
        "example-01": {
          "angular": {
            "schema": ["*"]
          }
        }
      }
    },
    "configure": {
      "default-config": {
        "type": "object",
        "properties": {
          "options": {
            "type": "object",
            "properties": {
              "listenIp": {
                "type": "string",
                "required": true,
                "default": "0.0.0.0"
              },
              "listenPort": {
                "type": "number",
                "required": true,
                "default": 7400
              },
              "sendToPort": {
                "type": "number",
                "required": true,
                "default": 3333
              },
              "sendToIp": {
                "type": "string",
                "required": true,
                "default": "localhost"
              }
            }
          }
        }
      }
    },
    "message": {
      "osc-message": {
        "title": "Send OSC Message",
        "type": "object",
        "properties": {
          "oscType": {
            "type": "string",
            "enum": ["message"],
            "default": "message"
          },
          "address": {
            "type": "string",
            "required": true
          },
          "args": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "enum": ["string", "float", "integer", "blob", "true", "false", "null", "bang", "timetag", "array"]
                },
                "value": {
                  "type": "string"
                }
              }
            }
          }
        }
      },
      "osc-bundle": {
        "title": "Send Bundle",
        "type": "object",
        "properties": {
          "oscType": {
            "type": "string",
            "enum": ["bundle"],
            "default": "bundle"
          },
          "timetag": {
            "type": "number",
            "required": true
          },
          "elements": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "oscType": {
                  "type": "string",
                  "enum": ["message"],
                  "default": "message"
                },
                "address": {
                  "type": "string",
                  "required": true
                },
                "args": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "type": {
                        "type": "string",
                        "enum": ["string", "float", "integer", "blob", "true", "false", "null", "bang", "timetag", "array"]
                      },
                      "value": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
